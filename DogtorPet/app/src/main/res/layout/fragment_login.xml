<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary">



    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/buttonrounded"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="@color/primaryTextColor"
        android:translationY="270dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/buttonrounded"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:outlineAmbientShadowColor="#C4C4C44D"
        android:padding="15dp"
        android:textColor="@color/primaryTextColor"
        android:translationY="330dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="155dp"
        android:background="@drawable/button_rounder_registro"
        android:text="Entrar"
        android:translationY="420dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="254dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/button_rounder_registro"
        android:text="Registrar"
        android:translationY="420dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:text="Reestablecer contraseña"
        android:translationY="390dp"
        android:fontFamily="@font/public_sans_bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="105dp"
        android:gravity="center"
        android:text="INICIAR SESION"
        android:textColor="#2AE2E2"
        android:textSize="23dp"
        android:translationY="210dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:translationY="-43dp"
        app:srcCompat="@drawable/fondoarriba" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿YA TIENES UNA CUENTA?"
        android:layout_marginLeft="70dp"
        android:fontFamily="@font/public_sans_bold"
        android:translationY="25dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />



</RelativeLayout>